#
# Checks the signature on given .changes file according to the repository rules.
#

while true; do
    case "$1" in
        --conf-file=*)
            CONF_FILE=${1#--conf-file=}
            shift;;
        *)
            break;;
    esac
done

if [ -n $CONF_FILE ]; then
    . $CONF_FILE
else
    [ -f udak.conf ] && . ./udak.conf 2>/dev/null && PATH=$(pwd):$PATH \
        || . /etc/udak/udak.conf
fi

gpgv --keyring "$UDAK_KEYRING" "$1"
